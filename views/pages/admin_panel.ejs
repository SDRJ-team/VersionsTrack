<!DOCTYPE html>
<html lang="en" ng-app="global_app" ng-cloak>

<head>
    <%include ../partials/global/basic_head.ejs%>
    <script type="text/javascript" src="/js/services/users.js"></script>
    <script type="text/javascript" src="/js/pages/admin_panel.js"></script>
    <title>VersionsTrack - Admin Panel</title>
</head>
<body class="rtl" ng-controller="body_controller" data-ng-init="init()">
<!--<video style="position: absolute; width: 100%; height: 100%; top: 0; left: 0;" src="/resources/images/background.mp4" autoplay="autoplay" loop="loop"></video>-->

<%- include('../partials/global/nav', {page: 'admin_panel', page_view_name: 'Admin Panel'});%>

<div id="page_content">
    <br><br><br><br>
    <div style="padding: 0 0.75rem;" class="row">
        <% let menu_links = [
            {
                link: '/view/admin-panel/users-management',
                name: 'Users Management'
            }, {
                link: '/view/admin-panel/settings',
                name: 'Global Settings'
            }
        ]%>
        <%- include('../partials/global/menu', {menu_links: menu_links, current_page: category_name}) %>
        <div class="col m9 l10 hide-on-small-and-down show-on-medium-and-up">
            <%-include("../partials/admin_panel/" + category_name.replace('-', '_'))%>
        </div>
        <div class="hide-on-med-and-up show-on-small">
            <% for (let i = 0; i < menu_links.length; i++) { %>
                <%- "<h5>" + menu_links[i].name + "</h5>" %>
                <%- include("../partials/admin_panel/" + menu_links[i].link.split('/')[menu_links[i].link.split('/').length - 1].replace('-', '_')) %>
                <br>
            <% } %>
        </div>
    </div>
</div>

<%include ../partials/global/footer.html%>

</body>
</html>